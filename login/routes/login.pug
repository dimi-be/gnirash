extends ../../views/layout.pug

block content
  h2 Login
  fieldset#loginForm
    legend Login

    #messages
      if infoMessage
        .info=infoMessage
      if errorMessage
        .error=errorMessage

    form(action="/login", method="post")
      div
        label(for="key") Key
        input(type="text" name="key")
      div
        input(type="submit" value="Login")